<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	style="@style/parent_layout"
	tools:context="com.example.cia.projectwisatasemarang.HomeActivity">

	<ImageView
		android:id="@+id/imageHome"
		android:layout_width="match_parent"
		android:layout_height="220dp"
		android:layout_marginBottom="30dp"
		android:layout_alignParentTop="true"
		android:src="@drawable/logo_kotak"
		android:scaleType="centerCrop"
		android:background="#fff"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/imageHome">
		<android.support.v7.widget.CardView
			android:id="@+id/card_wisata_alam"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardCornerRadius="5dp"
			app:cardElevation="5dp"
			android:layout_margin="25dp"
			android:layout_weight="1">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:gravity="center"
				android:layout_margin="10dp">

				<ImageView
					android:id="@+id/imageView"
					android:layout_width="100dp"
					android:layout_height="100dp"
					android:src="@drawable/ic_adventure"/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					android:layout_margin="5dp"
					android:gravity="center"
					android:text="Wisata Alam"/>
			</LinearLayout>
		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:id="@+id/card_wisata"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_margin="25dp"
			app:cardCornerRadius="5dp"
			app:cardElevation="5dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:gravity="center"
				android:layout_margin="10dp">

				<ImageView
					android:layout_width="100dp"
					android:layout_height="100dp"
					android:src="@drawable/ic_travelling"/>

				<TextView
					android:id="@+id/textView"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					android:layout_margin="5dp"
					android:gravity="center"
					android:text="Wisata"/>
			</LinearLayout>
		</android.support.v7.widget.CardView>

	</LinearLayout>
</RelativeLayout>
